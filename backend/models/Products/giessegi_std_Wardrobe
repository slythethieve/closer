const mongoose = require('mongoose')

const giesStdWardSchema = mongoose.Schema({
    roomName: {
        type: String,
    },
    article: {
        type: String,
        required: [true, 'Please input the wardrobe article']
    },
    finish: {
        type: String,
        required: [true, 'Please add the wardrobe finish']
    },
    width: {
        type: Number,
        required: [true, 'Please add width']
    },
    height: {
        type: Number,
        required: [true, 'Please add height']
    },
    depth: {
        type: Number,
        required: [true, 'Please add depth']
    },
    accessories: {
        type: String
    },
    notes: {
        type: String
    },
    quote: {
        type: mongoose.Schema.Types.ObjectId,
        ref: 'quoteModel'
    }

})
module = mongoose.model('gies_std_Ward_Model', giesStdWardSchema)
